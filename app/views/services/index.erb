<h1>Services</h1>
<% if @services.empty? %>
<p>You haven't added any services yet.</p>
<ul class="list ph3 ph5-ns pv4">
  <li class="dib mr1 mb2"><a href='/services/new' class="f6 f5-ns b db pa2 link dim dark-gray ba b--black-20">Add New Service</a></li>
</ul>
<% else %>

<article class="center mw5 mw6-ns hidden ba mv4">
<% @services.each do |service|%>
  <a href="/services/<%=service.id%>"<h1 class="f4 bg-near-black white mv0 pv2 ph3"><%= service.service_name %></h1></a>
  <div class="pa3 bt">
    <p class="f6 f5-ns lh-copy measure mv0">
      Expiration Date: <%= service.expiry_date %>
    </p>
    <a class="link dim gray f6 f5-ns dib mr3" href="/services/<%=service.id%>/edit" name="edit">Edit</a>
  </div>
  <% end %>
</article>
<ul class="list ph3 ph5-ns pv4">
  <li class="dib mr1 mb2"><a href="/services/new" class="f6 f5-ns b db pa2 link dim dark-gray ba b--black-20">Add New Service</a></li>
</ul>
<% end %>