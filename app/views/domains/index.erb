<h1>Domain Names</h1>
<% if @domains.empty? %>
<p>You haven't added any domain names yet.</p>
<ul class="list ph3 ph5-ns pv4">
  <li class="dib mr1 mb2"><a href='/domains/new' class="f6 f5-ns b db pa2 link dim dark-gray ba b--black-20">Add Domain Name</a></li>
</ul>
<% else %>

<article class="center mw5 mw6-ns hidden ba mv4">
<% @domains.each do |domain|%>
  <a href="/domains/<%=domain.id%>"<h1 class="f4 bg-near-black white mv0 pv2 ph3"><%= domain.domain_name %></h1></a>
  <div class="pa3 bt">
    <p class="f6 f5-ns lh-copy measure mv0">
      Expiration Date: <%= domain.expiry_date %>
    </p>
    <a class="link dim gray f6 f5-ns dib mr3" href="/domains/<%=domain.id%>/edit" name="edit">Edit</a>
  </div>
  <% end %>
</article>
<ul class="list ph3 ph5-ns pv4">
  <li class="dib mr1 mb2"><a href="/domains/new" class="f6 f5-ns b db pa2 link dim dark-gray ba b--black-20">Add Domain Name</a></li>
</ul>
<% end %>